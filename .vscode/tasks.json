{
    "version": "0.1.0",
    "command": "tsc",
    "isShellCommand": true,
    "tasks": [
        {
            "taskName": "build server",
            "args": ["--project", "api", "--watch"],
            "echoCommand": true,
            "isWatching": true,
            "problemMatcher": "$tsc",
            "showOutput": "always",
            "suppressTaskName": true,
            "isBuildCommand": true
        },
        {
            "taskName": "build client",
            "args": ["--project", "assets/client", "--watch"],
            "echoCommand": true,
            "isWatching": true,
            "problemMatcher": "$tsc",
            "showOutput": "always",
            "suppressTaskName": true,
            "isTestCommand": true
        }
    ]
}