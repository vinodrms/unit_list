<!doctype html>
<html>
<head>
    <base href="../../../">
    <meta charset="utf-8">
    <title><%= invoiceLabel %> <%= invoiceReference %></title>
    <!-- Fonts -->
    <link href='assets/client/static-assets/css/roboto-font.css' rel='stylesheet' type='text/css'>
    <!-- Custom CSS -->
    <link href="assets/client/static-assets/css/unitpal-print.css" rel="stylesheet">

    <style>
    .invoice-box{
        max-width:800px;
        margin:auto;
        padding:30px;
        border:1px solid #eee;
        box-shadow:0 0 10px rgba(0, 0, 0, .15);
        font-size:9px;
        line-height:18px;
        font-family: 'Roboto', sans-serif;
        color:#555;
    }
    
    .invoice-box table{
        width:100%;
        line-height:inherit;
        text-align:left;
    }
    
    .invoice-box table td{
        padding:5px;
        vertical-align:top;
    }
    
    .invoice-box table tr td:nth-child(2){
        text-align:right;
    }
    
    .invoice-box table tr.top table td{
        padding-bottom:20px;
    }
    
    .invoice-box table tr.top table td.title{
        font-size:27px;
        line-height:15px;
        color:#333;
    }
    
    .invoice-box table tr.information table td{
        padding-bottom:40px;
    }
    
    .invoice-box table tr.heading td{
        background:#eee;
        border-bottom:1px solid #ddd;
        font-weight:bold;
    }
    
    .invoice-box table tr.details td{
        padding-bottom:20px;
    }
    
    .invoice-box table tr.item td{
        border-bottom:1px solid #eee;
    }
    
    .invoice-box table tr.item.last td{
        border-bottom:none;
    }
    
    .invoice-box table tr.total td:nth-child(2){
        border-top:2px solid #eee;
        font-weight:bold;
    }
    
    @media only screen and (max-width: 600px) {
        .invoice-box table tr.top table td{
            width:100%;
            display:block;
            text-align:center;
        }
        
        .invoice-box table tr.information table td{
            width:100%;
            display:block;
            text-align:center;
        }
    }
    </style>
</head>

<body>
    <div class="invoice-box">
        <table cellpadding="0" cellspacing="0">
            <tr class="top">
                <td colspan="5">
                    <table>
                        <tr>
                            <td class="title">
                                <img src="<%= hotelLogoSrcValue %>" style="width:100%; max-width:100px;"><br>
                                <span style="font-size:14px; color:#333;"><%= hotelNameValue %></span><br>
                                <span style="font-size:10px; color:#333;"><%= hotelWebsite %></span>
                            </td>
                            
                            <td>
                                <%= invoiceLabel %> : <%= invoiceReference %><br>
                                <%= dateLabel %>: <%= dateValue %><br>
                                <%if (addFieldValue1.length > 0) {%>
                                    <%= addFieldName1 %>: <%= addFieldValue1 %><br>
                                <%}%>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            
            <tr class="information">
                <td colspan="5">
                    <table>
                        <tr>
                            <td>
                                <%= hotelVatLabel %>: <%= hotelVatValue %><br>
                                <%= hotelAddressFirstLineValue %><br>
                                <%= hotelAddressSecondLineValue %><br>
                                <%if (hotelContactValue.length > 0) {%>
                                    <%= hotelContactLabel %>: <%= hotelContactValue %><br>
                                <%}%>
                            </td>
                            
                            <td width="45%">
                                <%= payerNameValue %><br>
                                <%if (payerAddressFirstLineValue.length > 0) {%>
                                    <%= payerAddressFirstLineValue %><br>
                                <%}%>
                                <%if (payerAddressSecondLineValue.length > 0) {%>
                                    <%= payerAddressSecondLineValue %><br>
                                <%}%>
                                <%if (payerContactValue.length > 0) {%>
                                    <%= payerContactLabel %>: <%= payerContactValue %><br>
                                <%}%>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            
            <tr class="heading">
                <td>
                    <%= itemLabel %>
                </td>
                <td>
                    <%= qtyLabel %>
                </td>
                <td>
                    <%= netUnitPriceLabel %>
                </td>
                <td>
                    <%= subtotalLabel %>
                </td>
                <td>
                    <%= vatLabel %>
                </td>
            </tr>
            
            <% itemVMList.forEach(function(itemVM){ %>
                <%if (itemVM.isLastOne) {%>
                    <tr class="item last">
                <% } else{ %>
                     <tr class="item">
                <%}%>
                
                    <td>
                        <%= itemVM.name %>
                    </td>
                    <td>
                        <%= itemVM.qty %>
                    </td>
                    <td>
                        <%= ccySymbol %><%= itemVM.netUnitPrice %>
                    </td>
                    <td>
                        <%= ccySymbol %><%= itemVM.subtotal %>
                    </td>
                    <td>
                        <%= ccySymbol %><%= itemVM.vat %>
                    </td>
                </tr>
            <% }); %>
            
            <tr class="total">
                <td></td>
                <td colspan="4">
                   <%= paymentMethodLabel %>: <%= paymentMethodValue %> <br>
                   <%= subtotalLabel %>: <%= ccySymbol %><%= subtotalValue %> <br>
                   <%= vatLabel %>: <%= ccySymbol %><%= totalVat %> <br>
                   <%= totalLabel %>: <%= ccySymbol %><%= totalValue %>
                </td>
            </tr>

            <tr class="top">
                <td colspan="5">
                    <div style="text-align:center; width:100%; padding-top: 25px;">
                        <p style="margin: auto;">
                            <span style="font-size: 7px;">Generated from </span>
                            <img src="<%= unitpalLogoSrcValue %>" style="height:13px;">
                            <small><strong>Unit</strong>Pal</small>
                        </p>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</body>
</html>