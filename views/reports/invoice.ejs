<!doctype html>
<html>
<head>
    <base href="../../../">
    <meta charset="utf-8">
    <title><%= invoiceLabel %> <%= invoiceReference %></title>
    <!-- Fonts -->
    <link href='assets/client/static-assets/css/roboto-font.css' rel='stylesheet' type='text/css'>
    <!-- Custom CSS -->
    <link href="assets/client/static-assets/css/unitpal-print.css" rel="stylesheet">

    <style>
    .invoice-box{
        max-width:800px;
        margin:auto;
        padding-right: 30px;
        padding-left: 30px;
        font-size:12px;
        line-height:17px;
        font-family: 'Roboto', sans-serif;
        color:#555;
    }
    .small-line-height {
        line-height:12px;
    }
    
    .invoice-box table{
        width:100%;
        line-height:inherit;
        text-align:left;
    }
    
    .invoice-box table td{
        padding:5px;
        vertical-align:top;
    }
    
    .invoice-box table tr td:nth-child(2){
        text-align:right;
    }
    
    .invoice-box table tr.heading td{
        background:#eee;
        border-bottom:1px solid #ddd;
        font-weight:bold;
    }
    
    .invoice-box table tr.details td{
        padding-bottom:20px;
    }
    
    .invoice-box table tr.item td{
        border-bottom:1px solid #eee;
    }
    
    .invoice-box table tr.item.last td{
        border-bottom:none;
    }
    
    .invoice-box table tr.total td:nth-child(2){
        border-top:2px solid #eee;
        font-weight:bold;
    }
    
    @media only screen and (max-width: 600px) {
        .invoice-box table tr.top table td{
            width:100%;
            display:block;
            text-align:center;
        }
        
        .invoice-box table tr.information table td{
            width:100%;
            display:block;
            text-align:center;
        }
    }

    * {
        margin: 0;
    }
    html, body {
        height: 100%;
    }
    .wrapper {
        min-height: 100%;
        height: auto !important; /* This line and the next line are not necessary unless you need IE6 support */
        height: 100%;
        margin: 0 auto -90px; /* the bottom margin is the negative value of the footer's height */
    }
    .footer, .push {
        height: 90px; /* .push must be the same height as .footer */
    }
    .text-details {
        white-space:pre-wrap;
    }
    .small-font {
        font-size: 9px;
        line-height: 9px;
    }
    .border-right {
        border-right: 1px dotted gray;
    }
    </style>
</head>

<body>
    <div class="invoice-box wrapper">
        <br><br>
        <table cellpadding="0" cellspacing="0">
            <tr class="top">
                <td colspan="5">
                    <table>
                        <tr>
                            <td class="title small-line-height">
                                <br>
                                <%= payerNameValue %><br>
                                <%if (payerAddressFirstLineValue.length > 0) {%>
                                    <%= payerAddressFirstLineValue %><br>
                                <%}%>
                                <%if (payerAddressSecondLineValue.length > 0) {%>
                                    <%= payerAddressSecondLineValue %><br>
                                <%}%>
                                <%if (payerContactValue.length > 0) {%>
                                    <%= payerContactLabel %>: <%= payerContactValue %><br>
                                <%}%>
                                <br><br>
                                <%if (payerVatCodeValue.length > 0) {%>
                                    <%= payerVatCodeLabel %>: <%= payerVatCodeValue %><br>
                                <%}%>
                                <%if (payerGovernmentCodeValue.length > 0) {%>
                                    <%= payerGovernmentCodeLabel %>: <%= payerGovernmentCodeValue %><br>
                                <%}%>
                                <%if (additionalPayerDetails.length > 0) {%>
                                    <span class="text-details"><%= additionalPayerDetails %></span>
                                <%}%>

                            </td>
                            
                            <td>
                                <img src="<%= hotelLogoSrcValue %>" style="width:100%; max-height:200px; max-width:200px;"><br>
                                <%= hotelVatLabel %>: <%= hotelVatValue %><br>
                                <%= invoiceLabel %> : <%= invoiceReference %><br>
                                <%= dateLabel %>: <%= dateValue %><br>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>

            <tr class="information">
                <td colspan="5">
                    <table>
                        <tr>
                            <td>
                                <%if (addFieldValue1.length > 0) {%>
                                    <%= addFieldName1 %>: <%= addFieldValue1 %><br>
                                <%}%>
                            </td>
                            <td width="45%">
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            
            <tr class="heading">
                <td>
                    <%= itemLabel %>
                </td>
                <td>
                    <%= qtyLabel %>
                </td>
                <td>
                    <%= netUnitPriceLabel %>
                </td>
                <td>
                    <%= subtotalLabel %>
                </td>
                <td>
                    <%= vatLabel %>
                </td>
            </tr>
            
            <% itemVMList.forEach(function(itemVM){ %>
                <%if (itemVM.isLastOne) {%>
                    <tr class="item last">
                <% } else{ %>
                     <tr class="item">
                <%}%>
                
                    <td>
                        <%= itemVM.name %>
                    </td>
                    <td>
                        <%= itemVM.qty %>
                    </td>
                    <td>
                        <%= ccySymbol %><%= itemVM.netUnitPrice %>
                    </td>
                    <td>
                        <%= ccySymbol %><%= itemVM.subtotal %>
                    </td>
                    <td>
                        <%= ccySymbol %><%= itemVM.vat %> / <%= itemVM.varPercentage %>%
                    </td>
                </tr>
            <% }); %>
            
            <tr class="total">
                <td></td>
                <td colspan="4">
                   <%= paymentMethodLabel %>: <%= paymentMethodValue %> <br>
                   <%= subtotalLabel %>: <%= ccySymbol %><%= subtotalValue %> <br>
                   <%= vatLabel %>: <%= ccySymbol %><%= totalVat %> <br>
                   <%= totalLabel %>: <%= ccySymbol %><%= totalValue %>
                </td>
            </tr>
            <tr class="information">
                <td colspan="5">
                    <table>
                        <tr>
                            <td>
                                <br>
                                <%if (additionalInvoiceDetails.length > 0) {%>
                                    <span class="text-details small-font"><%=additionalInvoiceDetails%></span>
                                <%}%>
                            </td>
                            <td width="45%">
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr class="information small-font">
                <td colspan="5">
                    <table>
                        <tr>
                            <td witdh="0%"></td>
                            <td witdh="33%" class="border-right">
                                <%= hotelNameValue %>
                            </td>
                            <td witdh="33%" class="border-right">
                                <%= hotelAddressFirstLineValue %><br>
                            </td>
                            <td witdh="33%">
                                <%= hotelAddressSecondLineValue %><br>
                            </td>
                            <td witdh="0%"></td>
                        </tr>
                        <tr>
                            <td witdh="0%"></td>
                            <td witdh="33%" class="border-right">
                                <%= hotelPhoneLabel %>: <%= hotelPhoneValue %>
                            </td>
                            <td witdh="33%" class="border-right">
                                <%= hotelEmailLabel %>: <%= hotelEmailValue %>
                            </td>
                            <td witdh="33%">
                                <%= hotelWebsite %><br>
                            </td>
                            <td witdh="0%"></td>
                        </tr>
                    </table>
                </td>
            </tr>

            <tr class="top footer">
                <td colspan="5">
                    
                </td>
            </tr>
        </table>
    </div>
    <div class="footer">
        <div style="text-align:center; width:100%; padding-top: 25px;">
            <p style="margin: auto;">
                <span style="font-size: 7px;">Generated from </span>
                <img src="<%= unitpalLogoSrcValue %>" style="height:13px;">
                <span style="font-size: 9px;"><strong>Unit</strong>Pal</span>
            </p>
        </div>
    </div>
</body>
</html>