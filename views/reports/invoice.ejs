<html>

<head>
    <base href="../../../">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Invoice</title>

    <!-- Fonts -->
    <link href='assets/client/static-assets/css/roboto-font.css' rel='stylesheet' type='text/css'>

    <!-- CSS -->
    <link href="assets/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="assets/node_modules/font-awesome/css/font-awesome.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="assets/client/static-assets/css/custom.css" rel="stylesheet">
    <link href="assets/client/static-assets/css/unitpal-print.css" rel="stylesheet">

    <!-- JS Libraries -->
    <script src="assets/node_modules/jquery.1/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="assets/node_modules/bootstrap/dist/js/bootstrap.min.js"></script>

</head>

<body>
    <div style="margin: 10px;">
        <section class="content invoice">
            <!-- title row -->
            <div class="row">
                <div class="col-xs-12 invoice-header">
                    <h1>
                        <!--<i class="fa fa-globe"></i>-->
                        <%= invoiceLabel %>
                            <small class="pull-right"><%= dateLabel %>: <%= dateValue %></small>
                    </h1>
                </div>
                <div class="col-xs-12">
                    <%= invoiceLabel %> #<%= invoiceReference %>
                </div>
                <!-- /.col -->
            </div>
            <!-- info row -->
            <div class="row invoice-info">
                <div class="col-md-2">
                    <br>
                    <img src="<%= hotelLogoSrcValue %>"/>
                </div>
                <div class="col-sm-4 invoice-col">
                    <br>
                    <%= fromLabel %>
                        <address>
                            <strong><%= hotelNameValue %></strong>
                            <br>
                            <%= hotelAddressFirstLineValue %>
                                <br>
                                <%= hotelAddressSecondLineValue %>
                                    <br>
                                    <%= hotelPhoneLabel %>:
                                        <%= hotelPhoneValue %>
                                            <br>
                                            <%= hotelEmailLabel %>:
                                                <%= hotelEmailValue %>
                        </address>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                    <br>
                    <%= toLabel %>
                        <address>
                            <strong><%= payerNameValue %></strong>
                            <br>
                            <%= payerAddressFirstLineValue %>
                                <br>
                                <%= payerAddressSecondLineValue %>
                                    <br>
                                    <%= payerPhoneLabel %>:
                                        <%= payerPhoneValue %>
                                            <br>
                                            <%= payerEmailLabel %>:
                                                <%= payerEmailValue %>
                        </address>
                </div>
                <!-- /.col -->
                <div class="col-sm-2">
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->

            <!-- Table row -->
            <div class="row">
                <div class="col-xs-12 table">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    <%= itemLabel %>
                                </th>
                                <th>
                                    <%= qtyLabel %>
                                </th>
                                <th>
                                    <%= netUnitPriceLabel %>
                                </th>
                                <th>
                                    <%= subtotalLabel %>
                                </th>
                                <th>
                                    <%= vatLabel %>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% itemVMList.forEach(function(itemVM){ %>
                                <tr>
                                    <td>
                                        <%= itemVM.name %>
                                    </td>
                                    <td>
                                        <%= itemVM.qty %>
                                    </td>
                                    <td>
                                        <%= ccySymbol %><%= itemVM.netUnitPrice %>
                                    </td>
                                    <td>
                                        <%= ccySymbol %><%= itemVM.subtotal %>
                                    </td>
                                    <td>
                                        <%= ccySymbol %><%= itemVM.vat %>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->

            <div class="row">
                <!-- accepted payments column -->
                <div class="col-xs-6">
                    <p class="lead">
                        <%= paymentMethodLabel %>:</p>
                    <p class="text-muted well well-sm no-shadow" style="margin-top: 10px;text-transform: uppercase;">
                        <%= paymentMethodValue %>
                    </p>
                </div>
                <!-- /.col -->
                <div class="col-xs-6">
                    <div class="table-responsive">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th style="width:50%">
                                        <%= subtotalLabel %>:</th>
                                    <td>
                                        <%= ccySymbol %><%= subtotalValue %>
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        <%= vatLabel %>:</th>
                                    <td>
                                        <%= ccySymbol %><%= totalVat %>
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        <%= totalLabel %>:</th>
                                    <td>
                                        <%= ccySymbol %><%= totalValue %>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12" style="text-align:center; width:100%; padding-top: 25px;">
                    <p style="margin: auto;">
                        <span style="font-size: 7px;">Generated from </span>
                        <img src="<%= unitpalLogoSrcValue %>" style="height:13px">
                        <small><strong>Unit</strong>Pal</small>
                    </p>
                </div>
            </div>
        </section>
    </div>
</body>

</html>